# ===========================================
# HMS Backend Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit the actual .env file!
# ===========================================

# GENERAL SETTINGS
DOCKER_COMPOSE_ENABLED=true

# DISCOVERY SERVICE
DISCOVERY_SERVICE_PORT=8763
DISCOVERY_SERVICE_HOST=discovery-service-pro

# CONFIG SERVER
CONFIG_SERVER_PORT=8888
CONFIG_SERVER_HOST=config-server-pro

# API GATEWAY
API_GATEWAY_PORT=8080

# AUTH SERVICE
AUTH_SERVICE_PORT=8081
AUTH_DB_HOST=mysql-auth-service
AUTH_DB_PORT=3306
AUTH_DB_NAME=auth_db
AUTH_DB_USERNAME=myuser
AUTH_DB_PASSWORD=secret

# PATIENT SERVICE
PATIENT_SERVICE_PORT=8082
PATIENT_DB_HOST=mysql-patient-service
PATIENT_DB_PORT=3306
PATIENT_DB_NAME=patient_db
PATIENT_DB_USERNAME=myuser
PATIENT_DB_PASSWORD=secret

# MEDICINE SERVICE
MEDICINE_SERVICE_PORT=8083
MEDICINE_DB_HOST=mysql-medicine-service
MEDICINE_DB_PORT=3306
MEDICINE_DB_NAME=medicine_db
MEDICINE_DB_USERNAME=myuser
MEDICINE_DB_PASSWORD=secret

# HR SERVICE
HR_SERVICE_PORT=8084
HR_DB_HOST=mysql-hr-service
HR_DB_PORT=3306
HR_DB_NAME=hr_db
HR_DB_USERNAME=myuser
HR_DB_PASSWORD=secret

# APPOINTMENT SERVICE
APPOINTMENT_SERVICE_PORT=8085
